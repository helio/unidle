      <div class="newsletter__inner">
        <label class="small">Your email</label>
        <input id="email3" type="email" placeholder="your@email.com" class="newsletter__input" onfocus="cleanErrors()" />
      </div>
      <button type="submit" class="button button--dark button-submit-js">Submit</button>
    </form>

    <label class="text--big c--red error error-newsletter-js"></label>
